{
  "name": "clipr",
  "version": "1.0.0",
  "description": "CLI tool to merge and split MP4 videos",
  "main": "dist/index.js",
  "bin": {
    "clipr": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "ncc build src/index.ts -o bundle -m && mv bundle/index.js clipr && rm -rf bundle",
    "start": "tsx src/index.ts merge",
    "dev": "tsx src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "video",
    "merge",
    "split",
    "ffmpeg",
    "cli",
    "clipr"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
